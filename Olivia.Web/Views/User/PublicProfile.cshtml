@model UserProfile
@{
    ViewData["Title"] = "Perfil de usuario";
}

<main class="row p-4">
    <div class="col-12 col-md-6">
        <h4 class="text-primary mb-4">Bienvenido/a al perfil de @Model.User.Username.ToLower()</h4>
    </div>
    <div class="col-12 col-md-6">
        @foreach (var post in Model.Posts)
        {
            <div class="py-3">
                <div class="card p-3">
                    <p class="card-text mb-4">@post.Content</p>
                    <div class="text-right">
                        <p class="small text-secondary mb-0">@post.Date.ToString("yyyy/MM/dd")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</main>