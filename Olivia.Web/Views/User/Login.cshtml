@model Olivia.Web.Models.Validation.UserLogin

@{
    ViewData["Title"] = "Inicio de sesión";
}


<main class="row p-4">
    <div class="col-12 col-md-6">
        <h4>Ingresa a tu perfil</h4><br>
        <p class="text-danger">@ViewBag.ErrorMessage</p>
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.SignInForm.Username)
                @Html.TextBoxFor(m => m.SignInForm.Username, new { @class="form-control"})
                <small class="text-danger">@Html.ValidationMessageFor(m => m.SignInForm.Username)</small>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SignInForm.Password)
                @Html.PasswordFor(m => m.SignInForm.Password, new { @class="form-control"})
                <small class="text-danger">@Html.ValidationMessageFor(m => m.SignInForm.Password)</small>
            </div>
            <div class="text-right">
                <input type="submit" class="btn btn-primary ml-3" value="Ingresar">
            </div>
        }
    </div>
    <div class="col-12 col-md-6">
        <h4>Regístrate</h4><br>
        <p class="text-danger">@ViewBag.ErrorMessage</p>
        @using (Html.BeginForm("SignUp", "User", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.SignUpForm.Username)
                @Html.TextBoxFor(m => m.SignUpForm.Username, new { @class="form-control"})
                <small class="text-danger">@Html.ValidationMessageFor(m => m.SignUpForm.Username)</small>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SignUpForm.Password)
                @Html.PasswordFor(m => m.SignUpForm.Password, new { @class="form-control"})
                <small class="text-danger">@Html.ValidationMessageFor(m => m.SignUpForm.Password)</small>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SignUpForm.Email)
                @Html.TextBoxFor(m => m.SignUpForm.Email, new { @class="form-control"})
                <small class="text-danger">@Html.ValidationMessageFor(m => m.SignUpForm.Email)</small>
            </div>
            <div class="text-right">
                <input type="submit" class="btn btn-primary ml-3" value="Registrarse">
            </div>
        }
    </div>
</main>